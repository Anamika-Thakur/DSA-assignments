#include<iostream>
using namespace std;

int main() {

  int n ;
  cin>>n;
  // n should be odd
  int a = (n/2)+1;
  int b = (n/2);
   for (int i=1; i<=a; i++){ 
     for (int j=1; j<=a-i; j++){
       cout <<"  ";   
       }
      for (int k=1; k<=2*i-1; k++){
       cout <<"* ";
      }
       cout<<endl;
    }
    
   for (int l=1; l<=b; l++){ 
     for (int o=1; o<l; o++){
       cout <<"  ";   
       }
      for (int t=1; t<=2*b-(2*l-1);t++){
       cout <<"* ";
      }
       cout<<endl;
    }
  
 }
